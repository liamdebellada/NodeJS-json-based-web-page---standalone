<script>
    var jsonitems = '<%- JSON.stringify(items) %>'
    var items = $.parseJSON(jsonitems)
</script>


<html>
    <% items.page.forEach(function(item){ %>
        <head>
            <div style="text-align: center;">
                <h1 class="name_title" id="comp"></h1>
                <a class="text-decoration-none" href="/aboutnode"><h1 class="node_text" id="node"></h1></a>
            </div>
        </head>
        
        <script>
            var name = '<%=item.name %>'
            var n = name.split(" ");

            var end = n[n.length - 1];
            var complete = name.replace(end, "");

            document.getElementById("comp").innerHTML = complete;
            document.getElementById("node").innerHTML = end;
        </script>
    <% }) %>
        <body class="p-3 mb-2 bg-dark text-white">
            <h2 style="text-align: center; padding-top: 30px;">How JSON is used</h2>
        <div class="div_text">
        <div class="container">
        <div class="row d-flex justify-content-center">
            <% items.cards.forEach(function(item){ %>
                <a class="" value="">
                    <div class="col d-flex justify-content-center">
                        <div class="card bg-dark text-white" style="width: 250px; height: 250px; background-color: white;">
                            
                            <div class="card-img-overlay">
                                <h4><%= item.header %></h4>
                                <p class="card-text"><%= item.desc %></p>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>
    </div>
    <hr/>
