<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200&display=swap" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="../page.css">

<script>
    var jsonitems = '<%- JSON.stringify(items) %>'
    var items = $.parseJSON(jsonitems)
</script>


<html>
    <% items.page.forEach(function(item){ %>
        <head>
            <div style="text-align: center; padding-bottom: 5px;">
                <h1 class="name_title" id="comp"></h1>
                <a class="text-decoration-none" href="/aboutnode"><h1 class="node_text" id="node"></h1></a>
            </div>
        </head>
        
        <script>
            var name = '<%=item.name %>'
            var n = name.split(" ");

            var end = n[n.length - 1];
            var complete = name.replace(end, "");

            document.getElementById("comp").innerHTML = complete;
            document.getElementById("node").innerHTML = end;
        </script>
    <% }) %>
        <body class="p-3 mb-2 bg-dark text-white">
        <div class = "content-div-custom"">
            <h2 style="text-align: center; padding-top: 30px;">How JSON is used</h2>
        <div class="div_text">
        <div class="container">
        <div class="row d-flex justify-content-center">
            <% items.cards.forEach(function(item){ %>
                <a class="" value="">
                    <div class="col d-flex justify-content-center">
                        <div class="card bg-dark text-white" style="width: 250px; height: 250px; background-color: white;">
                            
                            <div class="card-img-overlay">
                                <h4><%= item.header %></h4>
                                <p class="card-text"><%= item.desc %></p>
                            </div>
                        </div>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>
    </div>
    </div>
    <hr/>
    <div class = "content-div-custom">
    <h2 style="text-align: center; padding-top: 30px;">Referencing data</h2>
    <div class="row mb-2 justify-content-center" style="padding-top: 30px;">
        <div class="col-md-6">
            <% items.dataref.forEach(function(item){ %>
          <div class="card flex-md-row mb-4 box-shadow h-md-250" style="margin: 5px;">
            <div class="card-body bg-dark d-flex flex-column align-items-start">
              <strong class="d-inline-block mb-2 text-white"><%= item.smalltitle %></strong>
              <h3 class="mb-0">
                <text class="text-white" href="#"><%= item.biggertitle %></text>
              </h3>
              <div class="mb-1 text-muted"><%= item.subtext %></div>
              <p class="card-text mb-auto"><%= item.desc %></p>
              <a href="<%= item.referenceurl %>">Reference</a>
            </div>
            <div class="col-md-4" style="overflow: hidden; position:relative; margin-right: 10px;">
            <img class="card-img-right flex-auto d-none d-md-block" src="<%= item.img %>"style="width: 100%; height: auto; margin: 10%;">
            </div>
        </div>
          <% }) %>
        </div>
      </div>
    </div>
      <hr/>
      <div class = "content-div-custom">
      <div class="container mt-5">
        <% items.objectcall.forEach(function(item){ %>
        <div class="card" style="border: none;">
          <div class="row">
            <div class="col-md-8">
              <div class="card-body">
                <h2>Calling objects</h2>
                <p><%= item.body %></p>
                <p><%= item.body2 %></p>
              </div>
            </div>
            <div class="col-md-4">
                <img src="<%= item.img %>" class="img-fluid">
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      </div>
        
            <hr/>
            <h2 style="font-family: 'Courier New'; text-align: center; padding-top: 30px; font-size:11px; font-weight:200px;">Liam Debell 2020</h2>
        </body>
</html>